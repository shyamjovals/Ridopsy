<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/iruthiimage"
    tools:context="com.example.prasanna.prot1.mapslog"
    android:visibility="visible">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Transmission"
        android:id="@+id/transmit"
        android:onClick="onstart"
        android:background="#0c46c3"
        android:width="220dp"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="158dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/stoptrans" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Transmission"
        android:id="@+id/stoptrans"
        android:layout_below="@+id/transmit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:background="#0c46c3"
        android:width="220dp"
        android:textColor="#FFFFFFFF" />
</RelativeLayout>
